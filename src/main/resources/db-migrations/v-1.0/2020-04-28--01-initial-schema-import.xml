<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2020-04-28--01-initial-schema-import-1" author="avnikulin">
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(256)"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="phone" type="varchar(255)"/>
            <column name="version" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="2020-04-28--01-initial-schema-import-2" author="avnikulin">
        <addPrimaryKey tableName="users" columnNames="id"/>
    </changeSet>

    <changeSet id="2020-04-28--01-initial-schema-import-3" author="avnikulin">
        <addUniqueConstraint tableName="users" columnNames="username"/>
    </changeSet>

    <changeSet id="2020-04-28--01-initial-schema-import-4" author="avnikulin">
        <createSequence sequenceName="id_users_seq" startValue="1" incrementBy="1"/>
    </changeSet>


</databaseChangeLog>